<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"

    >

<ImageView
    android:layout_width="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/splas_screen_background"
    android:layout_height="match_parent" />
<ProgressBar
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="34dp"
    android:id="@+id/progressBar2" />

<TextView
    android:text="Welcome To"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25sp"
    android:textColor="#fcf9f9"
    android:textStyle="bold"
    android:id="@+id/textView"
    tools:layout_conversion_absoluteX="125dp"
    tools:layout_conversion_absoluteY="288dp"
    tools:layout_conversion_absoluteWidth="132dp"
    tools:layout_conversion_absoluteHeight="30dp"
    tools:layout_editor_absoluteY="288dp"
    tools:layout_editor_absoluteX="125dp"
    android:layout_marginTop="36dp"
    android:layout_below="@+id/splash_screen_logo"
    android:layout_centerHorizontal="true" />

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/splash_screen_logo"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/splasg_screen_logo"
    app:civ_border_width="2dp"
    app:civ_border_color="#fffcfc"
    tools:layout_conversion_absoluteX="132dp"
    tools:layout_conversion_absoluteY="111dp"
    tools:layout_conversion_absoluteWidth="120dp"
    tools:layout_conversion_absoluteHeight="120dp"
    tools:layout_editor_absoluteY="111dp"
    tools:layout_editor_absoluteX="132dp"
    android:layout_marginTop="84dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="....Where excellent is nurtured,Pursued and celebrated."
    android:id="@+id/textView3"
    android:textSize="13sp"
    android:textStyle="italic"
    android:textColor="#ffffff"
    android:textAlignment="center"

    android:layout_marginRight="13dp"
    android:layout_marginEnd="13dp"
    android:layout_below="@+id/textView2"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="10dp" />

<TextView
    android:layout_width="384dp"
    android:layout_height="wrap_content"
    android:text="Sylhet International University"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:textAlignment="center"
    android:id="@+id/textView2"
    tools:layout_conversion_absoluteX="0dp"
    tools:layout_conversion_absoluteY="318dp"
    tools:layout_conversion_absoluteWidth="384dp"
    tools:layout_conversion_absoluteHeight="30dp"
    tools:layout_editor_absoluteY="318dp"
    tools:layout_editor_absoluteX="0dp"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true" />

</RelativeLayout>